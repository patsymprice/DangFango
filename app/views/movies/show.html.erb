<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @movie.name %>
</p>

<p>

  <iframe width="560" height="315" src="<%= @movie.url %>"
  frameborder="0" allowfullscreen></iframe>

</p>

<p>
  <% @movie.tickets.each do |ticket| %>
  <%=  ticket %>
  <% end %>
</p>

<p>
  <b>Synopsis:</b>
  <%= @movie.synopsis %>
</p>

<p>
  <b>Rating:</b>
  <%= @movie.rating %>
</p>


